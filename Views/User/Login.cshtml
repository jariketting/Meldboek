@model meldboek.Models.User
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            background: #ecf0f1; /*21323*/
            margin: 0 auto 0 auto;
            width: 100%;
            text-align: center;
            margin: 0px 0px 0px 0px;
        }

        .box {
            background: #3bb546;
            width: 800px;
            border-radius: 6px;
            position: center;
            margin: 0 auto 0 auto;
            padding: 100px 100px 100px 50px;
            border: #6f89c4 4px solid;
        }

        .username {
            background: #ecf0f1;
            border: #8593bc 1px solid;
            border-bottom: #ccc 2px solid;
            padding: 8px;
            width: 350px;
            color: #AAAAAA;
            margin-top: 10px;
            font-size: 1em;
            border-radius: 4px;
        }

        .button {
            background: #6f89c4;
            width: 200px;
            padding-top: 5px;
            padding-bottom: 5px;
            padding-left: 75px;
            color: white;
            border-radius: 4px;
            border: #27ae60 1px solid;
            margin-top: 10px;
            margin-bottom: 20px;
            margin-left: 100px;
            margin-right: auto;
            float: left;
            margin-left: 125px;
            font-weight: 600;
            font-size: 0.8em;
        }

            .button:hover {
                background: Blue;
            }

        .fpwd {
            color: #6f89c4;
            text-decoration: underline;
        }

        #absoluteCenteredDiv {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            margin: auto;
            width: 800px;
            height: 300px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h1 id="login-header">Login</h1>
    <div id="absoluteCenteredDiv">
        <form asp-action="LogIn" method="post">
            <div class="box">


                <p><font face="verdana" color="black">Emailadres</font></p>
                <input type="text" required name=Email id="Email" size="50"><br><br>
                <p><font face="verdana" color="black">Wachtwoord</font></p>
                <input type="password" required name=Password id="Password" size="50"> <br><br>
                <input type="submit" value="button" id="submit">
                @*<a href="#"><div class="button">Sign in</div></a>*@
            </div>
        </form>
        @*<p>Wachtwoord vergeten? <a class="fpwd" href="#">Click Hier!</a></p>*@
    </div>
</body>
</html>