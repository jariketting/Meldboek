@{
    ViewData["Title"] = "Chats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        @if (ViewBag.success != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.success
            </div>
        }

        <div class="row">
            <div class="col-6">
                <h2>Chatrooms</h2>
                <form method="post">
                    <input type="hidden" name="type" value="join" />

                    <div class="form-group">
                        <label for="join">Join chatroom</label>
                        <select name="chat" class="form-control" id="join">
                            @foreach (var chat in ViewBag.chatsJoinable)
                            {
                                <option value="@chat.ChatId">@chat.Name</option>
                            }
                        </select>
                    </div>

                    <button class="btn btn-primary" type="submit" disabled="@(ViewBag.chatsJoinable.Count == 0 ? "disabled" : null)">Join</button>
                </form>

                <hr />

                <form method="post">
                    <input type="hidden" name="type" value="open" />

                    <div class="form-group">
                        <label for="open">My chatrooms</label>
                        <select name="chat" class="form-control" id="open">
                            @foreach (var chat in ViewBag.chatsJoined)
                            {
                                <option value="@chat.ChatId">@chat.Name</option>
                            }
                        </select>
                    </div>
                    <button class="btn btn-primary" type="submit" disabled="@(ViewBag.chatsJoined.Count == 0 ? "disabled" : null)">Open</button>
                </form>
            </div>

            <div class="col-6">
                <h2>Friends</h2>
                <form method="post">
                    <input type="hidden" name="type" value="chat" />

                    <div class="form-group">
                        <label for="join"></label>
                        <select name="chat" class="form-control" id="friend">
                            @foreach (var Person in ViewBag.friends)
                            {
                            <option value="@Person.Email">@Person.FirstName @Person.LastName</option>
                            }
                        </select>
                    </div>

                    <button class="btn btn-primary" type="submit" disabled="@(ViewBag.friends.Count == 0 ? "disabled" : null)">Open chat</button>
                </form>
            </div>

        </div>
    </div>